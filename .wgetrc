# Definir usuário e senha para autenticação HTTP/FTP
# user=seu_usuario
# password=sua_senha

# Definir diretório de destino padrão para downloads
directory_prefix=$HOME/Downloads

# Ignorar certificados SSL inválidos
# check_certificate = off

# Definir tempo limite de conexão
timeout=30

# Limitar a taxa de transferência para 1MB/s
limit_rate=1m

# Ativar saída de progresso
progress = bar:force

# Mostrar informações de depuração
verbose = on
